.footer__form
  width 634px
  display block
  right 166px
  position relative
  float right
  margin-bottom 35px

.form__header
  font-size 24px
  margin 0 28px
  margin-bottom 22px
  color #ef5350
  margin-top 36px

.form__input
  height 60px
  margin-right 27px
  width 303px
  margin-bottom 24px
  font-size 19px
  padding-left 22px
  border-color #e3f2fd
  border-radius 4px
  border-style solid
  border-width 2px

.last
  margin-right 0
  padding-left 41px

.form__select
  display inline-block
  width 304px
  height 60px
  position relative
  border-color #e3f2fd
  border-radius 4px
  border-style solid
  border-width 2px

.select-arrow-1
  position absolute
  z-index -9999
  border 12px solid transparent
  border-bottom 0
  right 21px
  top 23px
  border-top-color #1de9b6

.select-arrow-2
  position absolute
  z-index -9999
  border 12px solid transparent
  border-bottom 0
  right 21px
  top 20px
  border-top-color #FFF

.select
  width 100%
  height 100%
  background transparent
  border 0
  padding-left 39px
  font-size 19px
  appearance none

.form__textarea
  height 120px
  width 100%
  border-color #e3f2fd
  border-radius 4px
  border-style solid
  border-width 2px
  font-size 24.95px

.form__submit
  color #ffffff
  background-color #ef5350
  top 14px
  position relative
  float right
  height 59px
  width 150px
  font-size 21px
  text-transform uppercase
  border-radius 10px
  margin-right -4px

.main__img
  position absolute
  top 11%
  left 14%

.img
  width 28.56%
  border-top 117px solid #322323
  border-bottom 118px solid #322323
  border-left 29px solid #322323
  border-right 33px solid #322323
  border-radius 62px
  background-color transparent
  @media screen and (min-width: 1600px)
    border-top 140px solid #322323
    border-bottom 145px solid #322323
  @media screen and (min-width: 1900px)
    border-bottom 165px solid #322323
  @media screen and (max-width 1000px)
    border-top 90px solid #322323
    border-bottom 90px solid #322323
  @media screen and (max-width 900px)
    border-top 75px solid #322323
    border-bottom 75px solid #322323
  @media screen and (max-width 800px)
    border-top 55px solid #322323
    border-bottom 70px solid #322323
    border-left 20px solid #322323
    border-right 23px solid #322323
    border-radius 30px
  @media screen and (max-width 600px)
    border-top 50px solid #322323
    border-bottom 50px solid #322323
    border-left 15px solid #322323
    border-right 15px solid #322323
  @media screen and (max-width 500px)
    border-top 40px solid #322323
    border-bottom 40px solid #322323
    border-left 10px solid #322323
    border-right 10px solid #322323
  @media screen and (max-width 500px)
    border-top 35px solid #322323
    border-bottom 35px solid #322323
    border-left 8px solid #322323
    border-right 8px solid #322323

.img__photography
  width 100%
  vertical-align middle

.img__speaker1
  top -14%
  position absolute
  left 47.7%

.speaker1
  width 5%
  height 3%
  border-radius 50%
  -moz-border-radius 50%
  -webkit-border-radius 50%
  background-color #ef5350

.img__speaker2
  top -7.8%
  position absolute
  left 40.5%

.speaker2
  width 19%
  height 1%
  border-radius 4px
  background-color #ef5350

.img__touch
  margin 6.4% auto 0

.touch
  width 20%
  height 12%
  border 4px solid #fff
  border-radius 50%
  background-color transparent
  position absolute
  left 39%
  @media screen and (max-width 800px)
    border-width 3px
  @media screen and (max-width 400px)
    border-width 2px


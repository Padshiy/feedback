  top 19.5%
  z-index -1
  left -128%

.dark-green
  width 289%
  height 15%
  display block
  background-color #04e4a2

.img__white-green
  transform rotate(37.5deg) scale(1) skew(23deg) translate(0)
  position absolute
  top 38.5%
  z-index -1
  left -124.6%

.white-green
  width 289%
  height 14%
  display block
  background-color #68EEAC
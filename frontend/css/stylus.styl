@import "fonts.css"
@import "reset.css"

*
  box-sizing border-box

body
  background-color #ffffff
  font-family 'Montserrat', sans-serif
  font-size 25px
  color #626262
  @media screen and (max-width 1000px)
    font-size 16px
  @media screen and (max-width 900px)
    font-size 15px
  @media screen and (max-width 800px)
    font-size 12px
  @media screen and (max-width 700px)
    font-size 10px
  @media screen and (max-width 500px)
    font-size 8px

@import '../includes/*'
@import '../includes/header/logo/*'
@import '../includes/header/nav/*'
@import '../includes/main/article/*'
@import '../includes/main/img/*'
@import '../includes/footer/copyright/*'
@import '../includes/footer/form/*'